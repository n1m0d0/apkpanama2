<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp"
    android:background="@color/colorBody"
    tools:context="gesport.xpertise.com.gesportapk.events"
    android:focusableInTouchMode="true"
    >
    <ListView
        android:paddingTop="65dp"
        android:layout_marginRight="30dp"
        android:id="@+id/lvEvents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="10.0sp"
        android:divider="@android:color/transparent"
        android:background="@color/colorBody"
        />


    <TextView
        android:paddingTop="41dp"
        android:id="@+id/tvPending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUCESOS REGISTRADOS"
        android:textAppearance="@style/colorTitle"
        />
    <EditText android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/separation"
        android:layout_marginRight="@dimen/separation"
        android:hint="Buscar"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fbAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="3dp"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="#2F3887"
        app:srcCompat="@android:drawable/ic_input_add" />
</RelativeLayout>