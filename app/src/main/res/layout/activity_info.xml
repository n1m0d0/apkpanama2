<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBody"
    android:orientation="vertical"
    tools:context="diggate.xpertise.com.diggateapk.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/separation"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="Version: "
            android:textColor="@color/colorTextVariable"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Usuario: "
            android:textColor="@color/colorTextVariable"
            android:textSize="15dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="@dimen/separation"
        android:onClick="logo"
        android:src="@drawable/logo2" />

    <TextView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="gesport"
        android:text="GesPort - Powered by Xpertise"
        android:textColor="@color/colorBorderEditText"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/imageView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_gesport"
        android:onClick="privacidad"
        android:text="PolÃ­tica de privacidad"
        android:textColor="@color/colorBodyEditText"
        android:textSize="25dp"
        tools:ignore="OnClick" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/separation"
        android:src="@drawable/candado" />

</LinearLayout>