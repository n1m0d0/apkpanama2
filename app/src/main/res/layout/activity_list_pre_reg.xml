<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBody"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="1dp"
    tools:context="gesport.xpertise.com.gesportapk.listPreReg">

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/separation"
        android:layout_marginRight="@dimen/separation"
        android:hint="Buscar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/separation"
        android:layout_marginTop="@dimen/separation"
        android:layout_marginRight="@dimen/separation"
        android:text="PRE-REGISTROS REGISTRADOS"
        android:textAppearance="@style/colorTitle" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lvPreReg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBody"
            android:divider="@android:color/transparent"
            android:dividerHeight="10.0sp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:layout_marginBottom="3dp"
            android:clickable="true"
            android:focusable="true"
            app:backgroundTint="#2F3887"
            app:srcCompat="@android:drawable/ic_input_add" />
    </RelativeLayout>

</LinearLayout>