<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gesport.xpertise.com.gesportapk.MainActivity"
    android:focusableInTouchMode="true"
    >
    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/logo"
        android:onClick="logo"
        />
    <ScrollView
        android:layout_marginTop="30dp"
        android:layout_below="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:orientation="vertical"
            android:padding="20dp">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/hint1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:hintTextAppearance="@style/test_appearance">
                <EditText
                    android:id="@+id/etUser"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:backgroundTint="#2F3887"
                    android:foregroundTint="#2F3887"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="correo electronico"
                    android:inputType="textEmailAddress"
                    android:textColor="#2F3887"
                    android:textColorHighlight="#2F3887"
                    android:textColorHint="#2F3887" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/hint2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:counterEnabled="true"
                app:hintTextAppearance="@style/test_appearance"
                app:passwordToggleEnabled="true">
                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:backgroundTint="#2F3887"
                    android:focusedByDefault="false"
                    android:foregroundTint="#2F3887"
                    android:hint="contraseña"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="textPassword"
                    android:textColor="#2F3887"
                    android:textColorHighlight="#2F3887"
                    android:textColorHint="#2F3887"
                    />
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:id="@+id/btnForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="olvidaste tu contraseña?"
                android:textColor="#2F3887"
                android:textColorHighlight="#2F3887"
                android:textColorHint="#2F3887"
                android:paddingBottom="17dp"
                />
            <TextView
                android:id="@+id/btnLogin"
                android:layout_width="215dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_corner"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Login"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>