<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/rounded_cornerlist"
    android:id="@+id/ll0001">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tvIdEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123456"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/tvKeyValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/bold"
            android:text="123456" />

        <TextView
            android:id="@+id/tvDateEventBegin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="234567" />

        <TextView
            android:textColor="@color/colorWhite"
            android:id="@+id/tvDateEventEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3456789" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="8"
        android:gravity="center"
        android:orientation="vertical">

            <ImageView
                android:id="@+id/iv0001"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:src="@drawable/password" />

    </LinearLayout>

</LinearLayout>
